<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactDisplay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_call_log_label" />

        <TextView
            android:id="@+id/contact_name_tv_1"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            tools:text="Khwilo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_name_tv_1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/incoming_calls_count_label"
                    android:textAllCaps="true"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/my_call_log_incoming_calls_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textStyle="bold"
                    tools:text="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/outgoing_calls_count_label"
                    android:textAllCaps="true"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/my_call_log_outgoing_calls_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold"
                    tools:text="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/missed_calls_count_label"
                    android:textAllCaps="true"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/my_call_log_missed_call_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    tools:text="3" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/compared_call_log_label" />

        <TextView
            android:id="@+id/contact_name_tv_2"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            tools:text="Khwilo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_name_tv_2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/incoming_calls_count_label"
                    android:textAllCaps="true"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/compared_call_log_incoming_calls_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textStyle="bold"
                    tools:text="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/outgoing_calls_count_label"
                    android:textAllCaps="true"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/compared_call_log_outgoing_calls_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold"
                    tools:text="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/missed_calls_count_label"
                    android:textAllCaps="true"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/compared_call_log_missed_calls_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    tools:text="3" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>